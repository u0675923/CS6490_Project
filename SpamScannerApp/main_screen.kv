<MainScreen>:
    RelativeLayout:    # using a relative layout, the elements can be placed manually    
        Button:            
            background_color: (0,0,0,0)
            background_normal: ''
            on_press: root.StatusButtonPressed()
            on_release: root.StatusButtonReleased()
            size_hint: 0.3,0.2 # size_hint is used to set the dimensions of the UI element w/ respect to the widget it is in
            pos_hint: {'center_x': 0.5, 'center_y': 0.9} # example of placing a UI element manually
            Image:
                id: status_image
                source: 'Images/base_button.png'
                size: self.parent.size
                pos: self.parent.pos

        Label:
            text: 'Welcome to our Spam Scanner App!\nTo start scanning, press the button at the top.\n' 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            halign: 'center'

        CustomButton:
            text: 'A B O U T'
            font_size: sp(20)
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            background_color: (76/255, 91/255, 127/255, 1)
            background_normal: ''

            on_release: root.AboutButtonPressed()

            canvas.before:
                Color:
                    rgba: (self.background_color)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]
                Color:
                    rgba: 1, 1, 1, 1  # white color for border
                Line:
                    width: 2.5
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 5)
<CustomButton@Button>:
    font_size: sp(20)
    size_hint: 1,1
    background_normal: ''
    background_color: (76/255,91/255,127/255,1)
    canvas.before:
        Color:
            rgba: (self.background_color)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
        Color:
            rgba: 1, 1, 1, 1  # white color for border
        Line:
            width: 2.5
            rounded_rectangle: (self.x, self.y, self.width, self.height, 5)

<BoxBorder@BoxLayout>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width: 1
            rounded_rectangle: (self.x, self.y, self.width, self.height, 5)

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        padding: 10
        TitleLabel:
            id: num_messages
            title: 'Messages Scanned:'
        TitleLabel:
            id: num_messages_found
            title: 'Spam Messages Found:'
        TitleLabel:
            id: category_messages
            title: 'Categories of Spam:'
        TitleLabel:
            id: program_runtime
            title: 'Runtime:'        

<TitleLabel@BoxLayout>:
    orientation: 'horizontal'
    title: ''
    data: ''
    spacing: dp(25)
    Label:
        text: root.title
        size_hint_x: None
        width: self.texture_size[0]
    Label:
        text: root.data
        bold: True
        size_hint_x: None
        width: 50
        valign: 'middle'
