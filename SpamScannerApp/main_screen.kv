<MainScreen>:
    GridLayout:
        cols: 1
        spacing: 50
        padding: 50
        FloatLayout:
            Button:
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                size_hint: None, None
                background_color: (0,0,0,0)
                background_normal: ''

                on_press:   root.StatusButtonPressed()
                on_release: root.StatusButtonReleased()
                Image:
                    id: status_image
                    source: 'Images/base_button.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
        
        FloatLayout:
            BoxBorder:
                id: box
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: None, None
                size: 300, 100

        CustomButton:
            text: 'R E C E N T   A C T I V I T Y'
            on_press: root.ActivityButtonPressed()
        CustomButton:
            text: 'S E T T I N G S'
            on_press: root.SettingsButtonPressed()
        CustomButton:
            text: 'A B O U T'      
            on_press: root.AboutButtonPressed()                     

# Custom UI Elements #
<StatusButton@Button>:
    size_hint: None, None
    size_hint_x: 0.1
    size_hint_y: 0.56
<CustomButton@Button>:
    font_size: 20
    size_hint_y: None
    size: self.texture_size[0] + 20, 50
    background_normal: ''
    background_color: (76/255,91/255,127/255,1)
    canvas.before:
        Color:
            rgba: (self.background_color)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
        Color:
            rgba: 1, 1, 1, 1  # white color for border
        Line:
            width: 2.5
            rounded_rectangle: (self.x, self.y, self.width, self.height, 5)
<BoxBorder@BoxLayout>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width: 1
            rounded_rectangle: (self.x, self.y, self.width, self.height, 5)

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        padding: 5
        TitleLabel:
            id: num_messages
            title: 'Messages Scanned:'
        TitleLabel:
            id: num_messages_found
            title: 'Spam Messages Found:'
        TitleLabel:
            id: category_messages
            title: 'Categories of Spam:'
        TitleLabel:
            id: program_runtime
            title: 'Runtime:'        

<TitleLabel@BoxLayout>:
    orientation: 'horizontal'
    title: ''
    data: ''
    spacing: 25
    Label:
        text: root.title
        size_hint_x: None
        width: self.texture_size[0]
    Label:
        text: root.data
        bold: True
        size_hint_x: None
        width: 50
        valign: 'middle'
